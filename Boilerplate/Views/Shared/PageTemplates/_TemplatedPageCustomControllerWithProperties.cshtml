@model Models.TemplatedPage.TemplatedPageCustomControllerWithPropertiesViewModel

@{
    ViewBag.Title = "_TemplatedPageCustomController";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Template with Cusotm Controller and Properties</h2>
<p>@Model.Message</p>
@if (Model.ShowHelloWorld)
{
    if (!string.IsNullOrWhiteSpace(Model.HelloWorldText))
    {
        <p>@Model.HelloWorldText</p>
    }
    else
    {
        <p>Hello World</p>
    }
}